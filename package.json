{
  "name": "frame-one-table",
  "version": "0.1.0",
  "description": "A react table with maximum flexibility.",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "repository": "Frame-One-Software/frame-one-table",
  "author": "frame_one_software",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@types/node": "12.0.0",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "classnames": "^2.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "tsc && copyfiles -u 1 src/**/*.css build/ && find ./build -type f -name \"**.stories.*\" -delete",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.2.8",
    "@storybook/addon-essentials": "6.2.8",
    "@storybook/addon-links": "6.2.8",
    "@storybook/node-logger": "6.2.8",
    "@storybook/preset-create-react-app": "3.1.7",
    "@storybook/react": "6.2.8",
    "copyfiles": "2.4.1",
    "react-scripts": "4.0.3",
    "typescript": "4.1.2"
  }
}
